<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - TherapEase</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            height: 100vh;
            overflow: hidden;
        }

        .dashboard-container {
            display: flex;
            height: 100vh;
            margin: 10px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 50px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .logo-section {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            margin-bottom: 20px;
        }

        .logo-section h2 {
            font-size: 1.5rem;
            font-weight: 300;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            color: white;
            border: 2px solid rgba(255,255,255,0.3);
        }

        .nav-item:hover, .nav-item.active {
            background: rgba(255,255,255,0.2);
            border-color: rgba(255,255,255,0.5);
            transform: translateX(5px);
        }

        .nav-icon {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .nav-text {
            font-size: 14px;
            font-weight: 500;
        }

        .logout-item {
            margin-top: auto;
            background: rgba(255,255,255,0.1);
        }

        .logout-item:hover {
            background: rgba(255,100,100,0.3);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 30px;
            display: grid;
            grid-template-columns: 2fr 1fr;
            grid-template-rows: auto 1fr 1fr;
            gap: 20px;
            overflow-y: auto;
        }

        .welcome-header {
            grid-column: 1 / -1;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            padding: 20px;
            border-radius: 15px;
            border-left: 5px solid #667eea;
        }

        .welcome-header h1 {
            color: #333;
            margin-bottom: 5px;
        }

        .welcome-header p {
            color: #666;
            font-size: 0.9rem;
        }

        /* Profile Card */
        .profile-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 20px;
            grid-row: span 2;
            border: 2px solid #e9ecef;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border: 4px solid #667eea;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
        }

        .profile-info {
            text-align: center;
        }

        .profile-info h3 {
            color: #333;
            margin-bottom: 10px;
        }

        .profile-stats {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #667eea;
        }

        .stat-label {
            font-size: 0.8rem;
            color: #666;
        }

        /* Journal Card */
        .journal-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            border: 2px solid #e9ecef;
            display: flex;
            flex-direction: column;
        }

        .card-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #e9ecef;
        }

        .card-title {
            font-size: 1.3rem;
            color: #333;
            font-weight: 600;
        }

        .add-entry-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 0.8rem;
            transition: all 0.3s;
        }

        .add-entry-btn:hover {
            background: #5a6fd8;
            transform: scale(1.05);
        }

        .recent-entries {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .entry-item {
            padding: 10px;
            background: #f8f9fa;
            border-radius: 8px;
            border-left: 3px solid #667eea;
        }

        .entry-date {
            font-size: 0.8rem;
            color: #666;
            margin-bottom: 5px;
        }

        .entry-mood {
            display: flex;
            gap: 5px;
            align-items: center;
        }

        /* Graph Card */
        .graph-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            border: 2px solid #e9ecef;
            position: relative;
        }

        .mood-chart {
            height: 200px;
            display: flex;
            align-items: end;
            justify-content: space-between;
            padding: 20px 0;
            margin-top: 20px;
        }

        .chart-bar {
            width: 20px;
            background: linear-gradient(to top, #667eea, #764ba2);
            border-radius: 3px;
            transition: all 0.3s;
        }

        .chart-bar:hover {
            transform: scale(1.1);
        }

        .chart-labels {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
            color: #666;
            margin-top: 10px;
        }

        /* Action Buttons */
        .quick-actions {
            grid-column: 1 / -1;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .action-btn {
            flex: 1;
            min-width: 200px;
            padding: 15px 20px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-therapy {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            color: white;
        }

        .btn-community {
            background: linear-gradient(135deg, #4ecdc4, #44a08d);
            color: white;
        }

        .btn-resources {
            background: linear-gradient(135deg, #45b7d1, #3498db);
            color: white;
        }

        .btn-crisis {
            background: linear-gradient(135deg, #f39c12, #e67e22);
            color: white;
        }

        .action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .main-content {
                grid-template-columns: 1fr;
                grid-template-rows: auto auto auto auto;
            }
            
            .profile-card {
                grid-row: span 1;
            }
        }

        @media (max-width: 768px) {
            .dashboard-container {
                flex-direction: column;
                margin: 5px;
            }
            
            .sidebar {
                width: 100%;
                padding: 15px;
                flex-direction: row;
                overflow-x: auto;
                gap: 5px;
            }
            
            .logo-section {
                display: none;
            }
            
            .nav-item {
                min-width: 120px;
                justify-content: center;
                padding: 10px;
            }
            
            .nav-text {
                display: none;
            }
            
            .main-content {
                padding: 20px;
            }
            
            .quick-actions {
                flex-direction: column;
            }
            
            .action-btn {
                min-width: auto;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <div class="sidebar">
            <div class="logo-section">
                <h2>TherapEase</h2>
                <p style="font-size: 0.8rem; opacity: 0.8;">Your wellness journey</p>
            </div>
            
            <a href="#" class="nav-item active">
                <div class="nav-icon">🏠</div>
                <span class="nav-text">Home</span>
            </a>
            
            <a href="#" class="nav-item">
                <div class="nav-icon">📝</div>
                <span class="nav-text">Journal</span>
            </a>
            
            <a href="#" class="nav-item">
                <div class="nav-icon">👨‍⚕️</div>
                <span class="nav-text">Therapist</span>
            </a>
            
            <a href="#" class="nav-item">
                <div class="nav-icon">💬</div>
                <span class="nav-text">Community</span>
            </a>
            
            <a href="#" class="nav-item">
                <div class="nav-icon">👤</div>
                <span class="nav-text">Profile</span>
            </a>
            
            <a href="#" class="nav-item logout-item">
                <div class="nav-icon">🚪</div>
                <span class="nav-text">Logout</span>
            </a>
        </div>
        
        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Welcome Header -->
            <div class="welcome-header">
                <h1> {{user}} </h1>
                <p>Here's your mental wellness dashboard. Take a moment for yourself today.</p>
            </div>
            
            <!-- Profile Card -->
            <div class="profile-card">
                <div class="profile-avatar">AU</div>
                <div class="profile-info">
                    <h3> </h3>
                    <p style="color: #666; font-size: 0.9rem;">Member since January 2025</p>
                </div>
                <div class="profile-stats">
                    <div class="stat-item">
                        <div class="stat-number">15</div>
                        <div class="stat-label">Journal Entries</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">7</div>
                        <div class="stat-label">Day Streak</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">3</div>
                        <div class="stat-label">Sessions</div>
                    </div>
                </div>
            </div>
            
            <!-- Journal Card -->
            <div class="journal-card">
                <div class="card-header">
                    <h3 class="card-title">Recent Journal Entries</h3>
                    <button class="add-entry-btn">+ New Entry</button>
                </div>
                <div class="recent-entries">
                    <div class="entry-item">
                        <div class="entry-date">Today, 2:30 PM</div>
                        <div class="entry-mood">
                            <span>😊</span>
                            <span style="font-size: 0.9rem;">Feeling optimistic today...</span>
                        </div>
                    </div>
                    <div class="entry-item">
                        <div class="entry-date">Yesterday, 8:15 AM</div>
                        <div class="entry-mood">
                            <span>😐</span>
                            <span style="font-size: 0.9rem;">Mixed emotions about work...</span>
                        </div>
                    </div>
                    <div class="entry-item">
                        <div class="entry-date">2 days ago, 10:45 PM</div>
                        <div class="entry-mood">
                            <span>😌</span>
                            <span style="font-size: 0.9rem;">Meditation helped today...</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Mood Graph Card -->
            <div class="graph-card">
                <div class="card-header">
                    <h3 class="card-title">Mood Tracker</h3>
                </div>
                <div class="mood-chart">
                    <div class="chart-bar" style="height: 60%;"></div>
                    <div class="chart-bar" style="height: 80%;"></div>
                    <div class="chart-bar" style="height: 45%;"></div>
                    <div class="chart-bar" style="height: 70%;"></div>
                    <div class="chart-bar" style="height: 85%;"></div>
                    <div class="chart-bar" style="height: 65%;"></div>
                    <div class="chart-bar" style="height: 90%;"></div>
                </div>
                <div class="chart-labels">
                    <span>Mon</span>
                    <span>Tue</span>
                    <span>Wed</span>
                    <span>Thu</span>
                    <span>Fri</span>
                    <span>Sat</span>
                    <span>Sun</span>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="quick-actions">
                <a href="#" class="action-btn btn-therapy">
                    <span>👨‍⚕️</span>
                    <span>Find Therapist</span>
                </a>
                <a href="#" class="action-btn btn-community">
                    <span>💬</span>
                    <span>Join Community</span>
                </a>
                <a href="#" class="action-btn btn-resources">
                    <span>📚</span>
                    <span>Wellness Resources</span>
                </a>
                <a href="#" class="action-btn btn-crisis">
                    <span>🚨</span>
                    <span>Crisis Help</span>
                </a>
            </div>
        </div>
    </div>

    <script>
        // Add interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth animations for chart bars
            const chartBars = document.querySelectorAll('.chart-bar');
            chartBars.forEach((bar, index) => {
                setTimeout(() => {
                    bar.style.opacity = '1';
                    bar.style.transform = 'scaleY(1)';
                }, index * 100);
            });

            // Add entry button functionality
            const addEntryBtn = document.querySelector('.add-entry-btn');
            addEntryBtn.addEventListener('click', function() {
                // This would typically open a modal or navigate to journal page
                alert('Opening new journal entry...');
            });

            // Navigation item clicks
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    // Remove active class from all items
                    navItems.forEach(nav => nav.classList.remove('active'));
                    // Add active class to clicked item
                    this.classList.add('active');
                });
            });

            // Action button clicks
            const actionBtns = document.querySelectorAll('.action-btn');
            actionBtns.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const action = this.textContent.trim();
                    console.log(`Navigating to: ${action}`);
                    
                    // Add visual feedback
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
        });
    </script>
</body>
</html>
